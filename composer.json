{
    "name": "abbasali/realtime-stock-dashboard",
    "description": "Real-time stock market dashboard using PHP, XML, and XHR",
    "type": "project",
    "version": "1.0.0",
    "keywords": [
        "stock",
        "dashboard",
        "real-time",
        "php",
        "xml",
        "xhr",
        "alpha-vantage",
        "market-data"
    ],
    "homepage": "https://github.com/AliOding12/stock-dashboard",
    "license": "MIT",
    "authors": [
        {
            "name": "Abbas Ali",
            "email": "abbasali1214313@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-xml": "*",
        "ext-dom": "*",
        "ext-simplexml": "*",
        "monolog/monolog": "^2.9",
        "guzzlehttp/guzzle": "^7.8",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "StockDashboard\\": "src/",
            "StockDashboard\\API\\": "php/",
            "StockDashboard\\Cache\\": "php/cache/",
            "StockDashboard\\Utils\\": "php/utils/"
        },
        "files": [
            "php/config.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "StockDashboard\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 php/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 php/ tests/",
        "analyse": "phpstan analyse php/ --level=7",
        "setup": [
            "@composer install",
            "@setup-directories",
            "@setup-permissions"
        ],
        "setup-directories": [
            "mkdir -p data/cache/stocks",
            "mkdir -p data/cache/metadata",
            "mkdir -p data/logs",
            "mkdir -p assets/images/stock-icons"
        ],
        "setup-permissions": [
            "chmod -R 755 data/",
            "chmod -R 777 data/cache/",
            "chmod -R 777 data/logs/"
        ],
        "clear-cache": [
            "rm -rf data/cache/stocks/*",
            "rm -rf data/cache/metadata/*"
        ],
        "dev-server": "php -S localhost:8000 -t .",
        "post-install-cmd": [
            "@setup-directories"
        ],
        "post-update-cmd": [
            "@setup-directories"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/AliOding12/stock-dashboard/issues",
        "source": "https://github.com/AliOding12/stock-dashboard",
        "docs": "https://github.com/AliOding12/stock-dashboard/wiki"
    }
}